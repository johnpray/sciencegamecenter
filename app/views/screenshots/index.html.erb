<% provide(:title, "Managing screenshots of #{@game.title}") %>

<h1 class="left">Managing Screenshots of <i><%= link_to @game.title, @game %></i></h1>

<% @screenshots.each do |s| %>
	<div>
		<p><%= link_to image_tag(s.image.url(:medium), style: "width: 100%;"), s %></p>
		<div><%= markdown s.description %></div>
		<p>
			<b><%= link_to "Edit screenshot", edit_screenshot_path(s) %></b> |
			<%= link_to "Delete screenshot", s, method: :delete, data: { confirm: "Are you sure you want to delete this screenshot?" } %>
		</p>
	</div>
	<hr />
<% end %>

<p><br /><b><%= link_to "Upload a new screenshot", new_game_screenshot_path %></b></p>
