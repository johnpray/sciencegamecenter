<table class="table table-condensed game_info">

	<tbody>
		<tr>
			<td class="info-key">
				<b>Deals with</b>
			</td>
			<td class="info-value">
				<%= subject_links_list(game) %>
			</td>
		</tr>
		<% if !game.concepts.blank? %>
		<tr>
			<td class="info-key">
				<b>&nbsp;</b>
			</td>
			<td class="info-value">
				<%= game.concepts %>
			</td>
		</tr>
		<% end %>
		<tr>
			<td class="info-key">
				<b>Intended for</b>
			</td>
			<td class="info-value">
				<%= !intended_for_links_list(game).blank? ? intended_for_links_list(game) : game.intended_audience %>
			</td>
		</tr>
		<tr>
		<tr>
			<td class="info-key">
				<b>Available on</b>
			</td>
			<td class="info-value">
				<%= platform_links_list(game) %>
			</td>
		</tr>
		<tr>
			<td class="info-key">
				<b>Cost</b>
			</td>
			<td class="info-value">
				<%= cost_links_list(game) %>
			</td>
		</tr>
		<tr>
			<td class="info-key">
				&nbsp;
			</td>
			<td class="info-value">
				&nbsp;
			</td>
		</tr>
		<tr>
			<td class="info-key">
				<b>Developed by</b>
			</td>
			<td class="info-value">
				<%= "#{markdown_inline game.developer} #{external_link_icon}".html_safe %>
			</td>
		</tr>
		<tr>
			<td class="info-key">
				<b>Website at</b>
			</td>
			<td class="info-value" style="word-break: break-word;">
				<%= tracked_link_to game.website_url, game.website_url, title: game.website_url, target: '_blank', rel: 'noopener' %>&nbsp;<%= external_link_icon %>
			</td>
		</tr>
	</tbody>
</table>
